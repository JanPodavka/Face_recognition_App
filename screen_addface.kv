<AddfaceWindow>:
    name:"addface"
    MDBoxLayout:
        pos_hint: {"center_x": .5, "center_y": .965}
        size_hint: 1, .08

        Button:
            text: "Najít osobu"
            background_color: (0, 0, 1, .35)
            font_size: 0.32 * self.height
            on_press:
                app.root.current = 'addface'
        Button:
            text: "Webkamera"
            background_color: (0, 0, 1, .8)
            font_size: 0.32 * self.height
            on_press:
                app.root.current = 'cam'
        Button:
            text: "Fotografie"
            background_color: (0, 0, 1, .8)
            font_size: 0.32 * self.height
            on_press:
                app.root.current = 'detection'

        FitImage:
            source: 'Images/logo2.png'
            background_color: (.0, 191/255, 1, 1)
    BoxLayout:
        size_hint: 1, .9
        spacing:10

        ## Volbas
        MDCard:
            size_hint: .35,1
            BoxLayout:
                orientation: "vertical"
                MDLabel:
                    font_style: "H4"
                    size_hint: 1,.15
                    text: "Volba Osobnosti"
                    halign: "center"


                #Volba osoby
                BoxLayout:
                    orientation: "vertical"
                    spacing: 10
                    size_hint: 1,.2
                    MDTextField:
                        id: find_per
                        padding:5
                        size_hint: 0.6,0.3
                        pos_hint: {"center_x": .5, "center_y": .5}
                        hint_text: "Jméno osobnosti"
                        mode: "rectangle"


                    Button:
                        text: "Najít"
                        background_color: 0, 0, 255, 0.6
                        pos_hint: {"center_x": .5, "center_y": .5}
                        size_hint: .5,.2
                        on_press:
                            root.download_person()
                BoxLayout
                    size_hint: 1,.8





        ## Grid s obrazky
        GridLayout:
            cols: 3
            rows: 3
            size_hint: .65,1
            spacing:2

            Image:
                id: o1
            Image:
                id: o2
            Image:
                id: o3
            FitImage:
                id: o4
            FitImage:
                id: o5
            FitImage:
                id: o6
            FitImage:
                id: o7
            FitImage:
                id: o8
            FitImage:
                id: o9

